{
	"name": "Remo Music Player",
	"description": "The first local player in WEB",
	"version": "0.1",
	"manifest_version": 2,
	"offline_enabled": true,
	"permissions": [
		"fileSystem",
		"fullscreen",
		"notifications",
		"storage",
		"unlimitedStorage"
	],
	"app": {
		"background": {
			"scripts": ["javascripts/background.js"]
		}
	},
	"icons": {
		"16": "images/app/remoIco-16.png",
		"32": "images/app/remoIco-32.png",
		"64": "images/app/remoIco-64.png",
		"128": "images/app/remoIco-128.png",
		"256": "images/app/remoIco-256.png"
	}
}